{
    "name": "thesis-css",
    "version": "1.0.0",
    "description": "FLAVOUR EARTH - Veganes Café im Herzen Flensburgs",
    "main": "index.html",
    "author": "Dorien Grönwald",
    "repository": {
      "type": "git",
      "url": "git+https://github.com/doriengr/thesis-css.git"
    },
    "scripts": {
      "build": "npm run css",
      "css-lint": "stylelint src/scss/",
      "css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 src/scss -o build",
      "css-prefix": "postcss --replace build/styles.css --use autoprefixer --map",
      "css-purge": "purgecss --keyframes --css build/styles.css --content index.html --output build",
      "css": "npm-run-all css-lint css-compile",
      "server": "serve --listen 3000",
      "start": "npm-run-all --parallel watch server",
      "watch": "nodemon -e html,css -x \"npm run css\"",
      "production": "npm run css-compile && npm run css-purge && npm run css-prefix && npm run js-compress",
      "js-compress": "minify src/js/* > build/site.js"
    },
    "dependencies": {
      "autoprefixer": "^10.3.1",
      "minify": "^7.0.2",
      "minireset.css": "0.0.7",
      "node-sass": "^6.0.1",
      "nodemon": "^2.0.12",
      "npm-run-all": "^4.1.5",
      "postcss": "^8.3.6",
      "postcss-cli": "^8.3.1",
      "purgecss": "^4.0.3",
      "serve": "^12.0.0"
    },
    "devDependencies": {
      "stylelint": "^13.13.1",
      "stylelint-config-standard": "^22.0.0"
    }
  }
  